<div class="index_main container">
  <div class="navbar-text">
    <h2>
        <p class="text-danger">
          <%= t ".list"%>
        </p>
      </h2>
    <% @users = User.all %>
    <table class="table table-striped">
      <tr>
        <th><%= t ".name"%></th>
        <th><%= t ".email"%></th>
        <th><%= t ".role"%></th>
        <th><%= t ".edit"%></th>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
        <select id="select2-single-input-role" class="input-role select2-hidden-accessible" tabindex="-1" aria-hidden="true">
        <option value="user">User</option>
        <option value="admin">Admin</option>
        </select>
        </td>
        <td>
        <%= button_to t(".edit"),  edit_user_registration_path, method: "get"%>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
